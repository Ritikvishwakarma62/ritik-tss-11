<%-include("../includes/header")%>
<div class="container my-2" style="min-height: 890px;">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Updata</h2>
            <form action="/user/update/<%-edit._id%>" method="post">
                <div class="my-2">
                    <label for="name" class="my-2">Name</label>
                    <input type="text" name="name" value="<%-edit.name%>" class="form-control" id="name">
                </div>
                <div class="my-2">
                    <label for="email" class="my-2">Email</label>
                    <input type="text" name="email" value="<%-edit.email%>" class="form-control" id="email">
                </div>
                <div class="my-2">
                    <label for="contact" class="my-2">Contact</label>
                    <input type="text" name="contact" value="<%-edit.contact%>" class="form-control" id="contact">
                </div>
                <div class="my-2">
                    <label for="country" class="my-2">Country</label>
                   <select name="country" class="form-control" id="">
                    <option value="">Select</option>
                    <% result.forEach((value)=>{%>
                        <option value="<%-value.name%>" <% if(edit.country == value.name){%> selected <% } %>><%-value.name%></option>
                 <% }) %>
                   </select>
                </div>
                <div class="my-2">
                    <label for="gender" class="my-2">Gender</label>
                    <label for="male">Male</label><input type="radio" <% if(edit.gender == "male"){%> checked <% } %> name="gender" value="male" id="male">
                    <label for="female">Female</label><input type="radio" <% if(edit.gender == "female"){%> checked <% } %> name="gender" value="female" id="female"> 
                </div>
                <div>
                    <input type="submit" value="Update" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</div>
<%-include("../includes/footer")%>