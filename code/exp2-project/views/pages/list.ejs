<%-include("../includes/header")%>
<div class="container my-2" style="min-height: 890px;">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">User-List</h2>
            <% if(result.length > 0){ %> 
          <table class="table table-dark table-hover">
            <tr>
                <th>S.No.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Country</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <% result.forEach((value,index)=>{ %>
              <tr>
                <td><%-index+1%></td>
                <td><%-value.name%></td>
                <td><%-value.email%></td>
                <td><%-value.country%></td>
                <td><a href="/user/edit/<%-value._id%>" class="btn btn-success ">Edit</a></td>
                <td><a href="/user/delete/<%-value._id%>" class="btn btn-danger ">Delete</a></td>
              </tr>
           <% }) %>
          </table>
          <%}else{%>
              <div class="alert alert-danger">
                No Rocord Found 
              </div>
            <%} %>
        </div>
    </div>
</div>
<%-include("../includes/footer")%>