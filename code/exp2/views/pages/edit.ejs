<%- include('../includes/header') %>
<div class="container my-5" style="min-height: 700px;">
    <div class="row">
        <div class="col-md-12">
            <form action="/student/update/<%-result._id%>" method="post">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <h2 class="text-center">Add New Student</h2>
                    <div class="my-3">
                        <label for="fullname">Full Name</label>
                        <input type="text" name="name" value="<%-result.name%>" id="fullname" class="form-control"/>
                    </div>
                    <div class="my-3">
                        <label>Fee</label>
                        <input type="text" name="fee" value="<%-result.fee%>" class="form-control"/>
                    </div>
                    <div class="my-3">
                        <label>Class</label>
                        <select name="class"  class="form-control">
                            <option  <% if(result.class == i){ %> selected <% } %>>Select Class</option>
                            <% for(var i=1; i<=12; i++){ %>

                                <option><%- i %></option>

                            <% } %>
                        </select>
                    </div>
                    <div class="my-3">
                        <label>Contact Number</label>
                        <input name="contact" type="text" value="<%-result.contact%>" class="form-control"/>
                    </div>
                    <div class="my-3">
                        <label>Gender</label>
                        <br />
                        <label for="male">Male</label> <input value="male" <% if(result.gender == "male"){%> checked<%} %> type="radio" id="male" name="gender"/>
                        <label for="female">Female</label> <input value="female"  <% if(result.gender == "female"){%> checked<%} %> type="radio" id="female" name="gender"/>
                    </div>
                    <div class="my-3">
                        <label>Address</label>
                        <textarea name="address" class="form-control"><%-result.address%></textarea>
                    </div>

                    <div class="my-3">
                        <input type="submit" value="Update Student" class="btn btn-warning" />
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
<%- include('../includes/footer') %>