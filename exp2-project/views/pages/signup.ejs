<%-include("../includes/header")%>
<div class="container my-2" style="min-height: 890px;">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">SignUp</h2>
          <form action="/signup/add" method="post">
            <div class="my-2">
                <label for="name" class="my-2">Name</label>
                <input type="text" name="name" id="name" class="form-control">
            </div>
            <div class="my-2">
                <label for="email" class="my-2">Email</label>
                <input type="text" name="email" id="email" class="form-control">
            </div>
            <div class="my-2">
                <label for="contact" class="my-2">Contact</label>
                <input type="text" name="contact" id="contact" class="form-control">
            </div>
            <div class="my-2">
                <label for="gender" class="my-2">gender</label>
             <label for="male">Male</label> <input type="radio" value="male" name="gender" id="male">
             <label for="female">Female</label> <input type="radio" value="female" name="gender" id="female">
            </div>
            <div class="my-2">
                <label for="">Country</label>
                <select name="country" id="" class="form-control">
                    <option value="">Select</option>
                    <% result.forEach((value)=>{%>
                        <option value="<%-value.name%>"><%-value.name%></option>
                  <%  }) %>
                </select>
            </div>
            <div class="my-2">
                <input type="submit" class="btn btn-warning">
            </div>
          </form>
        </div>
    </div>
</div>
<%-include("../includes/footer")%>