<%-include("../includes/header")%>
    <div class="container my-3" style="min-height: 700px;">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h4 class="text-center"> Users-List</h4>
                <% if(result.length > 0){%> 
                <table class="table table-info table-hover table-border">
                    <tr>
                        <th>S.No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Country</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    <% result.forEach((value,index)=>{%>
                        <tr>
                            <td><%-index+1%></td>
                            <td><%-value.name%></td>
                            <td><%-value.email%></td>
                            <td><%-value.country%></td>
                            <td><a href="/user/edit" class="btn btn-success btn-sm">Edit</a></td>
                            <td><a href="/user/delete/<%-value._id%>" class="btn btn-danger btn-sm">Delete</a></td>
                        </tr>
                  <%  }) %>
                </table>
                <%} else{%>
                    <div class="alert alert-danger">
                        No Record Found
                    </div>
              <%  } %>
            </div>
        </div>
    </div>
    <%-include("../includes/footer")%>